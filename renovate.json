{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHeader": "ADCM-Bot-Header",
  "assignees": [
    "mrdaviscsit"
  ],
  "labels": [
    "dependencies-updater"
  ],
  "packageRules": [
    {
      "labels": [
        "mkdocs-updates"
      ],
      "matchPackageNames": [
        "/mkdocs/"
      ]
    },
    {
      "labels": [
        "mkdocs-autorefs-updates"
      ],
      "matchPackageNames": [
        "/mkdocs-autorefs/"
      ]
    },
    {
      "labels": [
        "mkdocstrings-python-updates"
      ],
      "matchPackageNames": [
        "/mkdocstrings-python/"
      ]
    },
    {
      "labels": [
        "mkdocstrings-updates"
      ],
      "matchPackageNames": [
        "/mkdocstrings/"
      ]
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
